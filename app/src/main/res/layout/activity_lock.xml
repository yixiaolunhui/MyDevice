<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/selected_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_time_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="未选择锁屏时间"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/select_time_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_lock_btn_time"
        android:text="时间"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/start_lock_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_lock_btn_start"
        android:text="开启"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>
