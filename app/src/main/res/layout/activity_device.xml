<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <com.zwl.mydevice.widget.ListMoreTextView
        android:id="@+id/tv_more"
        android:layout_width="match_parent"
        android:text="121231431431251325312512312123143143125132531251235125132512351235151351351351212314314312513253125123512513251235123515135135135512513251235123515135135135"
        app:more_text_maxLines="3"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:more_text="...全文"
        app:more_text_color="@color/design_default_color_primary"
